<UserControl x:Class="ManageIT.MainActivity.UcDay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManageIT.MainActivity"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200" Loaded="UserControl_Loaded" Background="White" BorderBrush="Black" BorderThickness="1">
    <Grid>
        <WrapPanel Orientation="Vertical">
        <Label x:Name="lbDay" Content="00" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18"></Label>
        <Button x:Name="btnDetails" Content="View details" Width="90" Height="25" Margin="10,10,10,10" Click="btnDetails_Click"></Button>
        <Button x:Name="btnConclude" Content="Conclude work" Width="90" Height="25" Margin="10,10,10,10" Click="btnConclude_Click"></Button>
      </WrapPanel>
    </Grid>
</UserControl>
